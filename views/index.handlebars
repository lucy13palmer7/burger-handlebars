<div class="container">
    <div class="row">
        <div class="col-4">
            <h2 class="text-primary mt-5 font-weight-bold">Eat from Wishlist!</h2>
            {{#each burgers}}
            {{#unless this.devoured}}
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{burger_name}}
                    <a href="#" class="badge badge-info badge-pill devour" data-id="{{id}}">Eat That Burger!</a>
                </li>
            </ul>
            {{/unless}}
            {{/each}}
        </div>

        <div class="col-4">
            <h2 class="text-secondary mt-5">I ate it, I liked it but, next...</h2>
            {{#each burgers}}
            {{#if devoured}}
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{burger_name}}
                </li>
            </ul>
            {{/if}}
            {{/each}}
        </div>
    </div>

</div>